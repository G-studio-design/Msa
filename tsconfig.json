
{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["app/src/app/*"],
      "@/components/*": ["app/src/components/*"],
      "@/lib/*": ["app/src/lib/*"],
      "@/context/*": ["app/src/context/*"],
      "@/hooks/*": ["app/src/hooks/*"],
      "@/services/*": ["app/src/services/*"],
      "@/config/*": ["app/src/config/*"],
      "@/types/*": ["app/src/types/*"],
      "@/locales/*": ["app/src/locales/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
